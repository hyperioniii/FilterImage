<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >
    <!-- Màu nền -->
    <solid android:color="@color/white" >
    </solid>
    <!-- độ rộng viền và màu -->
    <stroke
        android:width="2dp"
        android:color="@color/old_blue_2" >
    </stroke>
    <!-- chỗ nào set padding -->
    <padding
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp" >
    </padding>
    <!-- chỗ này set độ cong góc -->
    <corners android:radius="0dp" >
    </corners>
</shape>